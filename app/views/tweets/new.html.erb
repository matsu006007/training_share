  <main class="px-3" style= "margin-top:30px">
    <div class="container ">
    <div class="row p-2">
    <div class="card mx-auto " style="width: 50vw;">
      <div class="d-flex justify-content-around bg-warning mt-2">
        <i class="fas fa-dumbbell"></i>
        <h1 class="text-center mt-2">投稿する</h1>
        <i class="fas fa-dumbbell"></i>
      </div>
  <div class="card-body px-5">
  <%= bootstrap_form_with model: @tweet, local: true do |f| %>

    <div class="form-group">
      <%= f.text_field :title, label: 'タイトル', autofocus: true %>
    </div>
    
    <div class="form-group">
      <%= f.collection_select( :genre_id,Genre.all, :id, :name, {label: 'ジャンルを選んでください'}) %>
    </div>
        
    <div class="form-group">
      <%= f.text_area :content, label: '内容' %>
    </div>

    <div class="form-group">
      <%= f.file_field :image, label: '画像（任意）' %>
    </div>

    <div class="form-group">
      <%= f.submit '投稿する'%>
    </div>
<% end %>
  </div>
  </div>
  </div>
  </div>
</main>


  <footer class="fixed-bottom mt-auto text-white-50  text-center bg-secondary">

          <a class="fas fa-clock text-warning" style="font-size:20px"></a>
          <a>← 相談 </a>
      </div>
  </div>

  <table class="table table-hover">
    <thead class=" border-bottom border-primary" style="background-color: #DDDDDD">
    <tr>
      <th scope="col" class="w-20" style="font-size: 15px;">ニックネーム</th>
      <th scope="col" class="w-20" style="font-size: 15px;">タイトル</th>
      <th scope="col" class="w-20" style="font-size: 15px;">投稿日</th>
      <th scope="col" class="w-20" style="font-size: 15px;"></th>
    </tr>
    </thead>
  <% @tweets.each do |tweet| %>
    <tbody class="border-bottom border-2">
      <tr>
        <th><%= link_to("#{tweet.user.nickname}", user_path(tweet.user_id), {class: "text-dark"}) %></th>
        <th><%= link_to("#{tweet.title}", tweet_path(tweet.id), {class: "text-dark"}) %></th>
        <th><%= link_to("#{l tweet.created_at}",tweet_path(tweet.id),{class: "text-dark"}) %></th>
        <% if tweet.genre_id == "9" %>
            <th>
              <a class="fas fa-clock text-danger" style="font-size:20px"></a>
            </th>
        <% elsif tweet.genre_id == "8" %>
            <th>
              <a class="fas fa-clock text-warning" style="font-size:20px"></a>
            </th>
        <% else %>
            <th>
              <a></a>
            </th>
        <% end %>
      </tr>
    </tbody>
  <% end %>
  </table>

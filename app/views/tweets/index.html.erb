<body class="d-flex h-100 text-left text-dark p-3 p-sm-5 mb-4 bg-img" >
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column ">
    <nav class="navbar navbar-expand-md navbar-dark bg-info bg-gradient fixed-top pt-2 pb-2 d-flex align-items-center">
      <div class="container-fluid">
        <a class="navbar-brand rounded-circle" href="#"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse position-relative" id="navbarsExampleDefault pull-right">
        <div class="title-name">
          <h1 class="text-white">TrainingShare</h1>
        </div>
      <div class="nickname-content" style="font-size: 20px;">
        <h5>ようこそ<b><%= link_to("#{current_user.nickname}", tweets_path, {class: "text-dark"}) %></b>さん</h5>
      </div>
      <ul class="navbar-nav me-auto mb-2 mb-md-0 position-absolute top-50 end-0 translate-middle-y" style="font-size: 20px;">
        <li class="nav-item d-flex align-items-center">
          <i class="fas fa-dumbbell"></i>
          <%= link_to("マイページ", user_path(current_user.id), {class: "nav-link text-dark w-100"}) %>
        </li>
        <li class="nav-item d-flex align-items-center">
          <i class="fas fa-pen"></i>
          <%= link_to("新規投稿",  new_tweet_path, {class: "nav-link text-dark w-100"}) %>
        </li>
        <li class="nav-item d-flex align-items-center">
          <i class="fas fa-door-open"></i>
          <%= link_to("ログアウト", destroy_user_session_path, {class: "nav-link text-dark w-100", method: :delete}) %>
        </li>
      </ul>
    </div>
    </div>
  </nav>
      <div class="flash-message pl-5">
        <%= render 'layouts/notifications' %>
      </div>


<main class="px-3" style= "margin-top:30px">
  <div class="container-fluid">
    <div class="card mx-auto shadow-lg" style="width: 75%;">
    <div class="m-3">
        <div class="card-body d-flex justify-content-between border-bottom border-info bg-info bg-gradient mb-1">
          <span class="display-6">みんなの投稿</span>
          <div class="icon d-flex align-items-end" style="margin-right: 30px;">
            <a class="far fa-comments text-danger" style="font-size:20px"></a>
            <a>••• 質問 </a>
          </div>
        </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" style="font-size: 20px; width: 25%;">ニックネーム</th>
            <th scope="col" style="font-size: 20px; width: 50%;">タイトル</th>
            <th scope="col" style="font-size: 20px; width: 25%;">投稿日</th>
          </tr>
        </thead>
        <tbody >
      <% @tweets.each do |tweet| %>
          <tr>
            <td>
              <%= link_to("#{tweet.user.nickname}", user_path(tweet.user_id), {class: "text-dark"}) %>
            </td>
            <td>
              <%= link_to("#{tweet.title}", tweet_path(tweet.id), {class: "text-dark"}) %>
            </td>
            <td class="w-20">
              <%= link_to("#{l tweet.created_at}",tweet_path(tweet.id),{class: "text-dark"}) %>
              <% if tweet.genre_id == "9" %>
                <a class="far fa-comments text-danger" style="font-size:20px"></a>
              <% end %>
            </td>
      <% end %>
      </tbody>
      </table>
      <%= paginate @tweets%>
      </div>
  </div>
  </div>
</main>



  <footer class="fixed-bottom mt-auto text-white-50  text-center bg-info bg-gradient" style="font-size: 15px;">
    <p class="text-white">©︎ training record </p>
  </footer>
</div>

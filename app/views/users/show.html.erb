<body class="d-flex h-100 text-left text-dark p-3 p-sm-5 mb-4 bg-img" >
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column ">
    <nav class="navbar navbar-expand-md navbar-dark bg-secondary bg-gradient fixed-top pt-2 pb-2 d-flex align-items-center">
      <div class="container-fluid">
        <a class="navbar-brand rounded-circle" href="#"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse position-relative" id="navbarsExampleDefault pull-right">
          <div class="title-name">
            <h1 class="text-white">TrainingShare</h1>
          </div>
          <div class="nickname-content">
            <h5>ようこそ<b><%= link_to("#{current_user.nickname}", user_path(current_user.id), {class: "text-warning"}) %></b>さん</h5>
          </div>
          <ul class="navbar-nav me-auto mb-2 mb-md-0 position-absolute top-50 end-0 translate-middle-y">
            <li class="nav-item ">
              <%= link_to("新規投稿", new_tweet_path, {class: "nav-link btn btn-warning text-dark w-100"}) %>
            </li>
            <li class="nav-item ">
              <%= link_to("投稿一覧へ戻る", tweets_path, {class: "nav-link btn btn-warning text-dark w-100"}) %>
            </li>
            <li class="nav-item">
              <%= link_to("ログアウト", destroy_user_session_path, {class: "nav-link btn btn-warning text-dark w-100", method: :delete}) %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="px-3 " style= "margin-top:30px">
      <div class="container">
        <div class="card mx-auto" style="width: 50%;">
          <div class="card-body ">
            <div class="h2 bg-warning text-center"><%= "プロフィール" %></div>
          </div>
           <% if @user.image.blank? %>
             <div class="image">
              <img src="<%= asset_path "no_image.png" %>" class = "icon_image img-thumbnail rounded-circle mx-auto d-block mb-3">
             </div>
          <% else %>
            <div class="image">
              <img src=<%= @user.image %> class = "icon_image img-thumbnail rounded-circle mx-auto d-block mb-3">
            </div>
          <% end %>

          <table class="table">
            <tbody class="border-bottom border-2">
              <tr>
                <th>ニックネーム</th>
                <td><%= @user.nickname %></td>
              </tr>

              <tr>
                <th>お住まいの都道府県</th>
                <td><%= @user.prefecture.name %></td>
              </tr>

              <tr>
                <th>トレーニングの頻度</th>
                <td><%= @user.training_frequency.name %></td>
              </tr>

              <tr>
                <th>目標</th>
                  <% if @user.target.blank?%>
                    <td>未登録</td>
                  <% else %>
                    <td><%= @user.target %></td>
                  <% end %>
              </tr>
              <tr>
                <th>コメント</th>
                  <% if @user.comment.blank? %>
                    <td>未登録</td>
                  <% else %>
                    <td><%= @user.comment %></td>
                  <% end %>
              </tr>
            </tbody>

          </table>
          <% if user_signed_in? && current_user.id == @user.id %>
            <div class="d-flex justify-content-center mb-4">
              <%= link_to( "ユーザー詳細編集", edit_user_registration_path(@user.id), { class: "btn btn-warning text-dark w-50" }) %>
            </div>
          <% end %>
        </div>

        <div class="card mx-auto mt-5 mb-5" style="width: 50%;">
          <div class="card-body">
            <div class="h2 bg-warning text-center"><%= "投稿一覧" %></div>
          </div>
        <table class="table table-hover">
          <thead class=" border-bottom border-primary table-light">
            <tr>
              <th scope="col" class="w-20" style="font-size: 15px;">タイトル</th>
              <th scope="col" class="w-20" style="font-size: 15px;">投稿日</th>
              <th scope="col" class="w-20" style="font-size: 15px;">イイネ！</th>
              <th scope="col" class="w-20" style="font-size: 15px;"></th>
            </tr>
          </thead>
        <% if @tweets.empty? %>
          <tbody class="border-bottom border-2">
            <tr>
              <th>投稿はまだありません</th>
              <th></th>
              <th></th>
            </tr>
          </tbody>
        <% else %>
        <% @tweets.each do |tweet| %>
          <tbody class="border-bottom border-2">
              <tr>
                <th><%= link_to("#{tweet.title}", tweet_path(tweet.id), {class: "text-dark"}) %></th>
                <th><%= link_to("#{l tweet.created_at}",tweet_path(tweet.id),{class: "text-dark"}) %></th>
                <th>
                  <%#<a class="fa fa-heart like-btn" style="font-size: 18px"><%= tweet.likes.count %><a>
                </th>
                <% if tweet.genre_id == "9" %>
                  <th>
                    <a class="fas fa-clock text-danger" style="font-size:20px"></a>
                  </th>
                <% elsif tweet.genre_id == "8" %>
                  <th>
                    <a class="fas fa-clock text-warning" style="font-size:20px"></a>
                  </th>
                <% else %>
                  <th>
                    <a></a>
                  </th>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        <% end %>
        </table>
        <%= paginate @tweets%>
        </div>
      </div>
    </main>


  <footer class="fixed-bottom mt-auto text-white-50  text-center bg-secondary">
    <p class="text-white"> ©︎ training record </p>
  </footer>

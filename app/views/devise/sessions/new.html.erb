<body class="d-flex h-100 text-center text-dark p-3 p-sm-5 mb-4 bg-img">
    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header >
    <div>
      <nav class="nav nav-masthead justify-content-center float-md-end">
        <%= link_to("トップページへ戻る", root_path, {class: "nav-link btn btn-warning text-dark"}) %>
        <%= link_to("サインイン", new_user_registration_path, {class: "nav-link btn btn-warning text-dark"}) %>
      </nav>
    </div>
  </header>

  <main class="px-3">
    <div class="container ">
    <div class="card mx-auto border border-dark border-3" style="width: 50%;">
    <h1 class="mt-3"><%= t('.sign_in') %></h1>
  <div class="card-body px-5">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: '(例)test@test.com', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'サインインで設定したパスワード', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit  t('.sign_in'), class: 'btn btn-primary' %>
  </div>
<% end %>

  </div>
  </div>
  </div>
  </main>

  <footer class="mt-auto text-dark-50">
    <p> ©︎ training record </p>
  </footer>
</div>

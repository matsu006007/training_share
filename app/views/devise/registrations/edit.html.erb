  <main class="px-3" style= "margin-top:30px">
    <div class="container-fluid">
    <div class="card mx-auto" style="width: 50%;">
    <h1 class="mt-3"><%= t('.title', resource: resource_name.to_s.humanize) %></h1>
  <div class="card-body px-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= bootstrap_devise_error_messages! %>


  <div class="form-group">
  <%= f.label :nickname %>
  <%= f.text_field :nickname, autofocus: true, autocomplete: 'nickname', placeholder: '(例)タロウ', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: '(例)test@test.com', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'new-password', placeholder: '新しいパスワード(半角英数字6ケタ以上)', class: 'form-control' %>
    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: '上記で設定したパスワード', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: 'current-password', placeholder: '現在のパスワード', class: 'form-control' %>
    <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
  </div>

  <div class="form-group d-flex flex-column">
    <%= f.label :prefecture %>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-select mb-2"}) %>
  </div>

  <div class="form-group d-flex flex-column">
    <%= f.label :training_frequency %>
    <%= f.collection_select(:training_frequency_id, TrainingFrequency.all, :id, :name, {}, {class:"training-frequency-select mb-2"}) %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, autofocus: true, autocomplete: 'image', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :target %>
    <%= f.text_field :target, autofocus: true, autocomplete: 'target', placeholder: '(例)6ヶ月で10キロ減量', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, autofocus: true, autocomplete: 'comment', placeholder: '(例)目標を達成する為に週３回5キロのランニングをする。', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.update'), class: 'btn btn-primary' %>
  </div>
<% end %>
  </div>
  <p><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>
  </div>
  </div>
  </main>

